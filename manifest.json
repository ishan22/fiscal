{
    "manifest_version": 2,
    "name": "Fiscal",
    "description": "Blocks website purchases from users who need be monitored on the internet",
    "version": "0.1.0",
    "icons": {
        "16": "images/use16.png",
        "48": "images/use48.png",
        "128": "images/use128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "images/use16.png",
            "48": "images/use48.png",
            "128": "images/use128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.amazon.com/gp/buy/spc/handlers/*"],
            "js": ["test.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "client/confirmation.html"
    ],
    "permissions": [
        "tabs"
    ]
}